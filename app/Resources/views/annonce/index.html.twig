{% extends 'base.html.twig' %}

{% block body %}
    <h1>Annonce list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Image</th>
                <th>Marque</th>
                <th>Ville</th>
                <th>Publique</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for annonce in annonces %}
            <tr>
                <td><a href="{{ path('annonce_show', { 'id': annonce.id }) }}">{{ annonce.id }}</a></td>
                <td>{{ annonce.description }}</td>
                <td>{{ annonce.image }}</td>
                <td>{{ annonce.marque }}</td>
                <td>{{ annonce.ville }}</td>
                <td>{% if annonce.publique %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('annonce_show', { 'id': annonce.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('annonce_edit', { 'id': annonce.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('annonce_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
